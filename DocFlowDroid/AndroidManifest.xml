<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.docflowdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/my26_mail"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.docflowdroid.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.docflowdroid.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.docflowdroid.DocDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_doc_detail" >
        </activity>
        <activity
            android:name="com.docflowdroid.ServerSelectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_server_selection" >
        </activity>
        <activity
            android:name="com.docflowdroid.MapActivitiy"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_map_activitiy" >
        </activity>
        <activity
            android:name="com.docflowdroid.MapActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_map" >
        </activity>

        <service android:name="com.docflowdroid.TimeService" />

        <activity
            android:name="com.docflowdroid.DocumentFilesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_document_files" >
        </activity>
        <activity
            android:name="com.docflowdroid.DocumentStatusActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_document_status" >
        </activity>
        <activity
            android:name="com.docflowdroid.DataTraffic"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_data_traffic" >
        </activity>
        <activity
            android:name="com.docflowdroid.ImportDBActivity"
            android:label="@string/title_activity_import_db" >
        </activity>
    </application>

</manifest>