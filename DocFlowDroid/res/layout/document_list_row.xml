<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="6dip"
    android:paddingTop="4dip" >

    <TextView
        android:id="@+id/dl_no"
        android:layout_width="40dip"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dl_id"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/dl_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dl_status_title"
            android:layout_width="30dip"
            android:layout_height="wrap_content" />

        <com.docflowdroid.comp.StatusBox
            android:id="@+id/dl_status_box"
            android:layout_width="30dip"
            android:layout_height="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dl_fc"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_vers"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_date_time"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_cust"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_cust_name"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_doc_type"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_zone"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_region"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_subregion"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_user"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_stade"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dl_controller"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>