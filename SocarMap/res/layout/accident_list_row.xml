<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_selector"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/case_id_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/accident_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="12/06/12-12/06/12"
            android:textColor="#DF0101"
            android:textSize="15dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accident_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight=".50"
            android:text="12/06/12-12/06/12"
            android:textColor="#10bcc9"
            android:textSize="15dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/accident_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rihanna Love the way lie ...asdasdasdasdasdasdasdasdasdasd"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Artist Name -->

        <TextView
            android:id="@+id/accident_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accident_person"
            android:layout_marginTop="1dip"
            android:text="Just gona stand there and ...asdasdasdasdasdasdasdasdasdasd"
            android:textColor="#343434"
            android:textSize="17dip"
            android:textStyle="bold" />

        <!-- Rightend Duration -->


        <!-- Rightend Arrow -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next_blue" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/accident_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/06/12-12/06/12"
            android:textColor="#04B404"
            android:textSize="15dip"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>